    <style name="TitleStyle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/_19ssp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>


